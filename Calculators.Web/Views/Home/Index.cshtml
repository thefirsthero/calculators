@model List<string>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mb-8">
    <h1 class="text-3xl md:text-4xl font-bold tracking-tight mb-2">Welcome to CalcHub</h1>
    <p class="text-lg text-slate-400 max-w-2xl mx-auto">Your one-stop solution for various calculations</p>
</div>

<div class="max-w-6xl mx-auto">
    <div class="card elevation-2">
        <div class="card-header">
            <h3 class="text-xl font-bold">Available Calculators</h3>
        </div>
        <div class="card-body">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="calculator-card p-6 rounded-lg">
                    <div class="card-body text-center flex flex-col items-center h-full">
                        <div class="calculator-icon mb-5">
                            <i class="material-icons text-3xl">percent</i>
                        </div>
                        <h5 class="card-title text-xl font-semibold mb-3">Discount Calculator</h5>
                        <p class="card-text text-slate-400 mb-6 flex-grow">Calculate discounts, savings, and final prices</p>
                        <a href="@Url.Action("Discount", "Calculator")" class="btn btn-primary w-full mt-auto">
                            Use Calculator
                        </a>
                    </div>
                </div>

                <div class="calculator-card p-6 rounded-lg opacity-70">
                    <div class="card-body text-center flex flex-col items-center h-full">
                        <div class="calculator-icon bg-slate-600 mb-5">
                            <i class="material-icons text-3xl">currency_exchange</i>
                        </div>
                        <h5 class="card-title text-xl font-semibold mb-3">Currency Converter</h5>
                        <p class="card-text text-slate-400 mb-6 flex-grow">Convert between different currencies</p>
                        <button class="btn bg-slate-700 w-full mt-auto cursor-not-allowed text-white" disabled>
                            Coming Soon
                        </button>
                    </div>
                </div>

                <div class="calculator-card p-6 rounded-lg opacity-70">
                    <div class="card-body text-center flex flex-col items-center h-full">
                        <div class="calculator-icon bg-slate-600 mb-5">
                            <i class="material-icons text-3xl">straighten</i>
                        </div>
                        <h5 class="card-title text-xl font-semibold mb-3">Unit Converter</h5>
                        <p class="card-text text-slate-400 mb-6 flex-grow">Convert between different units of measurement</p>
                        <button class="btn bg-slate-700 w-full mt-auto cursor-not-allowed text-white" disabled>
                            Coming Soon
                        </button>
                    </div>
                </div>

                <div class="calculator-card p-6 rounded-lg opacity-70">
                    <div class="card-body text-center flex flex-col items-center h-full">
                        <div class="calculator-icon bg-slate-600 mb-5">
                            <i class="material-icons text-3xl">local_gas_station</i>
                        </div>
                        <h5 class="card-title text-xl font-semibold mb-3">Fuel Efficiency</h5>
                        <p class="card-text text-slate-400 mb-6 flex-grow">Calculate fuel consumption and efficiency</p>
                        <button class="btn bg-slate-700 w-full mt-auto cursor-not-allowed text-white" disabled>
                            Coming Soon
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>